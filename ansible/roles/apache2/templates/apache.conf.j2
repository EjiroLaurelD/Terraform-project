<VirtualHost *:{{ http_port }}>
    ServerAdmin ubuntu@{{ http_host }}
    ServerName {{ http_host }}
    ServerAlias www.{{ http_host }}
    DocumentRoot /var/www/{{ repo_name }}
    ErrorLog ${APACHE_LOG_DIR}/{{ http_host }}_error.log
    CustomLog ${APACHE_LOG_DIR}/{{ http_host }}_access.log combined


    <Directory /var/www/{{ repo_name }}>
        Options +FollowSymlinks
        AllowOverride All
        Require all granted
    </Directory>
    
    <ifModule mod_dir.c>
        DirectoryIndex index.php index.html index.xhtml
    </ifModule>

</VirtualHost>
